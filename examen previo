cout<<"escribir Yb";
cin>>y2;
D=(sqrt((pow((x1-x2),2)))+(pow((y1-y2),2)))),2);
cout<<"la distancia entre dos puntos ("<<x1<<","<<y1") y ("<<x2<<","<<y2<<") es de:"<<endl<<D;
}

